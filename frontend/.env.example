# Frontend Environment Configuration

# API Configuration
VITE_API_BASE_URL=https://your-backend-domain.railway.app/api
VITE_API_TIMEOUT=10000

# App Configuration
VITE_APP_NAME=BookRecs
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Discover and share amazing book recommendations

# Feature Flags
VITE_ENABLE_SOCIAL_FEATURES=true
VITE_ENABLE_BOOK_SEARCH=true
VITE_ENABLE_USER_PROFILES=true
VITE_ENABLE_RECOMMENDATIONS=true

# External Services
VITE_GOOGLE_BOOKS_API_KEY=your_google_books_api_key
VITE_ANALYTICS_ID=your_analytics_id

# Development/Debug
VITE_DEBUG_MODE=false
VITE_LOG_LEVEL=info

# Social Media (for sharing)
VITE_TWITTER_HANDLE=@bookrecs
VITE_FACEBOOK_APP_ID=your_facebook_app_id

# SEO
VITE_SITE_URL=https://your-frontend-domain.vercel.app
VITE_SITE_TITLE=BookRecs - Discover Amazing Books
VITE_SITE_DESCRIPTION=Find your next favorite book with personalized recommendations from fellow readers
