{
  "name": "bookrecs-mern-app",
  "version": "1.0.0",
  "description": "A MERN stack book recommendation application",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "deploy:prepare": "node scripts/deploy.js",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "build:frontend": "cd frontend && npm run build",
    "start:backend": "cd backend && npm start",
    "install:all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "clean": "rm -rf backend/node_modules frontend/node_modules node_modules",
    "postinstall": "echo 'Run npm run install:all to install all dependencies'"
  },
  "keywords": [
    "mern",
    "react",
    "nodejs",
    "mongodb",
    "express",
    "book-recommendations",
    "social-media"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/bookrecs-app.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/bookrecs-app/issues"
  },
  "homepage": "https://github.com/yourusername/bookrecs-app#readme"
}
